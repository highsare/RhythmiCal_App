<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_background"
        android:src="@drawable/back"
        android:scaleType="centerCrop" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="230dp"
        app:srcCompat="@drawable/mainlogo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="25dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/idEt"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="#FFFFD2"
                android:textAlignment="center"
                android:hint="아이디" />
            <EditText
                android:id="@+id/pwEt"
                android:layout_width="200dp"
                android:background="#FFFFD2"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:hint="비밀번호" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/logInBtn"

                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:background="@drawable/login_img"
                android:onClick="logInRequest"/>


        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/codeEt"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:layout_height="50dp"
        android:background="#FFFFD2"
        android:textAlignment="center"
        android:hint="멀티플레이는 코드를 입력해주세요." />
    <Button
        android:id="@+id/codeBtn"
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:background="@drawable/code_img"
        android:layout_marginTop="240dp"
        android:onClick="codeRequest"/>

</FrameLayout>
