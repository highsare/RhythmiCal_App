<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/console"
        android:src="@drawable/console"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/oBtn"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="180dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:onClick="oBtnClicked"/>

    <ImageView
        android:id="@+id/xBtn"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="110dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:onClick="xBtnClicked"/>

    <ImageView
        android:id="@+id/leftBtn"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="110dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:onClick="leftBtnClicked"/>

    <ImageView
        android:id="@+id/downBtn"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="160dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:onClick="downBtnClicked"/>

    <ImageView
        android:id="@+id/upBtn"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="160dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:onClick="upBtnClicked"/>

    <ImageView
        android:id="@+id/rightBtn"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="200dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:onClick="rightBtnClicked"/>

</FrameLayout>